<h1><%= pluralize(@movies.size, 'Movie') %> Found:</h1>


<% @movies.each do |movie| %>
  <article>
    <header>
      <h2>
        <%= movie.name %>
      </h2>
    </header>
    <p>
      <%= movie.description %>
    </p>
    <table>
      <tr>
        <th>
          Rating:
        </th>
        <td>
          <%= movie.rating %>
        </td>
      </tr>
      <tr>
        <th>
          Released:
        </th>
        <td>
          <%= movie.released_on %>
        </td>
      </tr>
      <tr>
        <th>
          Total Gross:
        </th>
        <td>
          <%= format_total_gross(movie) %>
        </td>
      </tr>
    </table>
  </article>
<% end %>