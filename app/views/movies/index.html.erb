<h1><%= pluralize(@movies.size, 'Movie') %> Found:</h1>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2>
        <%= link_to(movie.name, movie) %>
      </h2>
    </header>
    <p>
      <%= truncate(movie.description, length:150, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>
          Rating:
        </th>
        <td>
          <%= movie.rating %>
        </td>
      </tr>
      <tr>
        <th>
          Released:
        </th>
        <td>
          <%= movie.released_on %> (<%= time_ago_in_words(movie.released_on) %> ago)
        </td>
      </tr>
      <tr>
        <th>
          Total Gross:
        </th>
        <td>
          <%= format_total_gross(movie) %>
        </td>
      </tr>
    </table>
  </article>
<% end %>