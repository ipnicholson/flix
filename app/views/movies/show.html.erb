<article>
  <header>
    <h1><%= @movie.name %></h1>
  </header>
  <p>
    <%= @movie.description %>
  </p>
  <h3>
    Rating
  </h3>
  <p>
    <%= @movie.rating %>
  </p>
  <h3>
    Released
  </h3>
  <p>
    <%= @movie.released_on %> (<%= time_ago_in_words(@movie.released_on) %> ago)
  </p>
  <h3>
    Total Gross
  </h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>  
</article>

<%= link_to("All Movies", root_path) %>
